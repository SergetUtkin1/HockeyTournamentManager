@page
@model HTM.WebApp.Pages.Hockey.Goals.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Goal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Goal.GoalId" />
            <div class="form-group">
                <label asp-for="Goal.Time" class="control-label"></label>
                <input asp-for="Goal.Time" class="form-control" />
                <span asp-validation-for="Goal.Time" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Goal.IsEven" /> @Html.DisplayNameFor(model => model.Goal.IsEven)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Goal.IsPowerPlay" /> @Html.DisplayNameFor(model => model.Goal.IsPowerPlay)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Goal.IsShorthanded" /> @Html.DisplayNameFor(model => model.Goal.IsShorthanded)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
