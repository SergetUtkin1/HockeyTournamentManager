@page
@model HTM.WebApp.Pages.Hockey.Matches.IndexModel

@{
    ViewData["Title"] = "Matches";
}

<h1>Matches</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Match[0].FirstTeam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Match[0].SecondTeam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Match[0].Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Match) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstTeam.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondTeam.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.MatchId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.MatchId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.MatchId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
