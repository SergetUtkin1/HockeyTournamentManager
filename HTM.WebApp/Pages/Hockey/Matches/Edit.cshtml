@page
@model HTM.WebApp.Pages.Hockey.Matches.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Match</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Match.MatchId" />
            <div class="form-group">
                <label asp-for="Match.FirstTeamId" class="control-label"></label>
                <select asp-for="Match.FirstTeamId" class="form-control" asp-items="ViewBag.FirstTeamId"></select>
                <span asp-validation-for="Match.FirstTeamId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Match.SecondTeamId" class="control-label"></label>
                <select asp-for="Match.SecondTeamId" class="form-control" asp-items="ViewBag.SecondTeamId"></select>
                <span asp-validation-for="Match.SecondTeamId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Match.Date" class="control-label"></label>
                <input asp-for="Match.Date" class="form-control" />
                <span asp-validation-for="Match.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
